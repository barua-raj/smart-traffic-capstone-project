<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        //click korle animation hoye oval shaped hobe
        <shape android:shape="oval">
            <gradient android:angle="135" android:endColor="#FAF5F5" android:startColor="#FAF5F5" />

            <stroke android:width="1dp" android:color="#000000" />

        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#FAF5F5" android:startColor="#FAF5F5" />

            <stroke android:width="1dp" android:color="#000000" />
        </shape>

    </item>
</selector>