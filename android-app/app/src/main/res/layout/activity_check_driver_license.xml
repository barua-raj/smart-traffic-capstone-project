<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".Users.CheckDriverLicense">
    <include layout="@layout/toolbar1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search by Driving License"
        android:textColorHint="#878888"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:id="@+id/search"
        android:drawableTint="@color/colorAccent"
        android:drawableLeft="@drawable/search"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/smsp_white_color"
        android:text="Search"
        android:onClick="searchByDLicense"/>
</LinearLayout>