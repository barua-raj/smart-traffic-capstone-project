<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:forceDarkAllowed="false"
    tools:context=".TraficPolicePanel.CaseByVehicle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1094dp"

android:orientation="vertical"
        >
        <include layout="@layout/toolbar1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"

            >

            <ProgressBar
                android:id="@+id/pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"


                />

            <LinearLayout
                android:id="@+id/rest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"


                >

                <androidx.cardview.widget.CardView
                    android:layout_width="195dp"
                    android:layout_height="195dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="190dp"

                    >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner Name: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Class: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/vehicle_class"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"


                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NID No: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/nidtext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Group: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/blood_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contact: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/emergency_contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/licenseLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="License No: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/license"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vehiclLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Reg. No: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/vehicleRegNoTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Engine No: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/engineEt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chassis No: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/chassis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CC: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/ccET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/colorEt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route Permit Certificate No: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/routePermitCertificateNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route Permit Expiry Date: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/routePermitExpiryDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fitness Certificatr No: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/fitnessCertificateET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fitness Certificate Expiry Date: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/fitnessCertificateExpiryDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tax Token No: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/taxTokenTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tax Token Expiry Date: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/taxtokenExpiryDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MFG Year: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/mfgyearEt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issue Authority: "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/issue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "

                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"

                        />

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="checkhistory"
                    android:text="Check Previous History"
                    android:textColor="@color/colorWhite"

                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="checkdues"
                    android:text="Check Dues"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Register a New Case"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/law"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Click here to see the Traffic Rules of Bangladesh"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Address"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

                <Spinner
                    android:id="@+id/addressSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#DFDEDE" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Select Applicant type"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/applicantTypeET"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#DFDEDE"
                    android:editable="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Select Crime Type"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#DFDEDE"
                    android:visibility="gone" />

                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                    android:id="@+id/spinnercrime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#DFDEDE"
                    app:smsp_alwaysShowFloatingLabel="false"
                    app:smsp_enableSearchHeader="false"
                    app:smsp_floatingLabelColor="@color/colorBlack"
                    app:smsp_floatingLabelText=""
                    app:smsp_hint="--Select Crime Type--"
                    app:smsp_hintColor="#090909"
                    app:smsp_isSearchable="true"
                    app:smsp_itemColor="@color/colorBlack"
                    app:smsp_itemListColor="@color/colorAccent"
                    app:smsp_itemListHintBackgroundColor="#DFDEDE"
                    app:smsp_itemListHintColor="#DFDEDE"
                    app:smsp_multilineError="false"
                    app:smsp_searchBackgroundColor="@color/colorWhite"

                    app:smsp_searchHeaderBackgroundColor="@color/colorWhite"
                    app:smsp_searchHint="Search..."
                    app:smsp_searchHintColor="@color/colorBlack"
                    app:smsp_searchTextColor="@color/colorBlack"
                    app:smsp_selectedItemListColor="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Select Imprisonment"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#DFDEDE" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Select Vehicle Type"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#DFDEDE" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Select Fine type"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#DFDEDE" />

                <EditText
                    android:id="@+id/vehicle_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:editable="false"
                    android:hint="Enter Vehicle Number "
                    android:inputType="none"
                    android:textColorHint="#B0B0B3" />

                <EditText
                    android:id="@+id/case_timeEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="Enter Occurrence Time"
                    android:inputType="text"
                    android:textColorHint="#B0B0B3" />

                <EditText
                    android:id="@+id/case_LocEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="Enter Case Location"
                    android:inputType="text"
                    android:textColorHint="#B0B0B3" />

                <Spinner
                    android:id="@+id/seized_documentSp"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:inputType="text"
                    android:textColorHint="#B0B0B3" />

                <EditText
                    android:id="@+id/appearanceDateEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="Last date of Appearance"
                    android:inputType="text"
                    android:textColorHint="#B0B0B3" />

                <EditText
                    android:id="@+id/fine_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:editable="false"
                    android:hint="Enter Fine amount"
                    android:inputType="none"
                    android:textColorHint="#B0B0B3" />

                <EditText
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="Feedback (optional)"
                    android:inputType="textLongMessage"
                    android:lines="4"
                    android:textColorHint="#B0B0B3" />

                <EditText
                    android:id="@+id/UserPhoneET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="userPhone"
                    android:inputType="textLongMessage"
                    android:lines="4"
                    android:textColorHint="#B0B0B3" />

                <ProgressBar
                    android:id="@+id/pb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"


                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="register"
                    android:text="Register this Case"
                    android:textColor="@color/colorWhite"


                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorWhite"


                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>