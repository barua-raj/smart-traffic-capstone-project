<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:forceDarkAllowed="false"
    android:orientation="vertical"
    tools:context=".Users.AddDriver">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"


            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:lottie_autoPlay="true"
                app:lottie_cacheComposition="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/police_car"
                app:lottie_speed="1"
                android:visibility="visible"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We are almost done here"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:textAlignment="center"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:hint="User Name"
                android:textColorHint="#818181"
                android:layout_marginTop="10dp"
                android:id="@+id/username"




                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:hint="Password"
                android:textColorHint="#818181"
                android:layout_marginTop="10dp"
                android:id="@+id/password"




                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:hint="Phone"
                android:textColorHint="#818181"
                android:layout_marginTop="10dp"
                android:id="@+id/phone"
                android:inputType="phone"




                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:hint="Driving License Number"
                android:textColorHint="#818181"
                android:layout_marginTop="10dp"
                android:id="@+id/license"



                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:hint="Vehicle Registration Number (DHAKA METRO-11-1616)"
                android:textColorHint="#818181"
                android:layout_marginTop="10dp"
                android:id="@+id/vehicle"


                />


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb"
                android:layout_gravity="center"
                android:visibility="gone"


                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Submit"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:onClick="submit"


                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>